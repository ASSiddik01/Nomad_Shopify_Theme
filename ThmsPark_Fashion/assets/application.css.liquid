a:hover,
a:focus {
  text-decoration: none;
}
input:focus,
button:focus,
textarea:focus {
  outline: none;
}

.mainmenu ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

.mainmenu li {
  display: inline-block;
  position: relative;
  color: #5f5f5f;
}

.mainmenu li:hover {
  color: #000;
}

.mainmenu li a {
  display: block;
  padding: 13px;
}

/*Drop down menu start*/
.mainmenu li ul {
  position: absolute;
  left: 0;
  top: 66px;
  background: #fff;
  width: 200px;
  text-align: left;
  opacity: 0;
  visibility: hidden;
  transition: 0.3s;
  z-index: 99;
  border: 1px solid #ddd;
}
.mainmenu li:hover ul {
  opacity: 1;
  visibility: visible;
  top: 50px;
}
.mainmenu li ul li a:hover {
  background-color: #ddd;
  transition: 0.5s;
}
.mainmenu li ul li {
  display: block;
  border-bottom: 1px solid #ddd;
}
.mainmenu li li a {
  padding: 7px 15px;
}

#navbar {
  padding: 30px 0px; /* Large padding which will shrink on scroll (using JS) */
  transition: 0.4s; /* Adds a transition effect when the padding is decreased */
  position: fixed; /* Sticky/fixed navbar */
  width: 100%;
  top: 0; /* At the top */
  z-index: 99;
}

#navbar #logo {
  font-size: 35px;
  font-weight: bold;
  transition: 0.4s;
}
